{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build main.exe",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${workspaceFolder}/cli/main.cpp",
        "-o",
        "${workspaceFolder}/main.exe",
        "-I",
        "${workspaceFolder}/include",
        "-I",
        "${workspaceFolder}/src",
        "-I",
        "C:/msys64/mingw64/include",
        "-L",
        "C:/msys64/mingw64/lib",
        "-lfmt"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build main.exe using g++"
    }
  ]
}
